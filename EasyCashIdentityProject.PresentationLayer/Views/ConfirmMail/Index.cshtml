@model ConfirmMailViewModel
@{
    Layout = null;
}



<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet"/>
<div class="container">
    <br />
    <br />

    <form method="post">
        <h2>Tasınan Mail adresi : @ViewBag.v </h2>
        <br />
        <label>Kullanıcı Id Değeri</label>
        <input type="text" class="form-control" asp-for="Mail" value="@ViewBag.v" />

        <label>Mail adresine gelen 6 haneli kodu</label>
        <input type="text" class="form-control" asp-for="ConfirmCode"/>
        <br />
        <button class="btn btn-primary">Hesabı aktifleştir</button>
    </form>
</div>